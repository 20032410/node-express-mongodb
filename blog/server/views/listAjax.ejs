<% include header.ejs %>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped" id="tableDom">
      <thead>
      <tr>
        <th>编号</th>
        <th>标题</th>
        <th>内容</th>
        <th>描述</th>
        <th>操作</th>
      </tr>
      </thead>
      <tbody>

      </tbody>
    </table>
  </div>
</div>
<% include footer.ejs %>
<script>
  var url = "/blog/listAjax";
  $.ajax({
    url:url,
    type:'get',
    dataType:'json',
    success:function(data){
      var $tr = "";
      for(var i = 0;i < data.length;i++){
        $tr += "<tr>"+
          "<th scope='row'>"+(i+1)+"</th>"+
          "<td>"+data[i].name+"</td>"+
          "<td>"+data[i].title+"</td>"+
          "<td>"+data[i].info+"</td>"+
          "<td></td></tr>";
      }
      $("#tableDom").append($tr);
    },
    error:function(){

    }
  });
</script>